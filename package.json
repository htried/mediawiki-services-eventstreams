{
  "name": "eventstreams",
  "version": "0.3.0",
  "description": "Streaming Wikimedia Events via HTTP SSE",
  "main": "./app.js",
  "scripts": {
    "start": "service-runner",
    "test": "PREQ_CONNECT_TIMEOUT=15 mocha",
    "lint": "eslint --cache --max-warnings 0 --ext .js --ext .json .",
    "docker-start": "service-runner docker-start",
    "docker-test": "service-runner docker-test",
    "test-build": "service-runner docker-test && service-runner build --deploy-repo --force",
    "coverage": "nyc --reporter=lcov _mocha"
  },
  "repository": {
    "type": "git",
    "url": "https://gerrit.wikimedia.org/r/mediawiki/services/eventstreams"
  },
  "keywords": [
    "MediaWiki",
    "stream",
    "event",
    "SSE",
    "EventSource",
    "Kafka"
  ],
  "author": "Wikimedia Analytics Team <analytics@lists.wikimedia.org>",
  "contributors": [],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://phabricator.wikimedia.org/tag/wikimedia-stream/"
  },
  "homepage": "https://gerrit.wikimedia.org/r/#/admin/projects/mediawiki/services/eventstreams",
  "dependencies": {
    "bluebird": "^3.5.5",
    "body-parser": "^1.19.0",
    "bunyan": "^1.8.12",
    "compression": "^1.7.4",
    "domino": "^2.1.3",
    "express": "^4.17.1",
    "http-shutdown": "^1.2.1",
    "js-yaml": "^3.13.1",
    "preq": "^0.5.9",
    "service-runner": "https://github.com/wikimedia/service-runner.git#prometheus_metrics",
    "swagger-router": "^0.7.4",
    "swagger-ui-dist": "^3.22.3",
    "uuid": "^3.3.2",
    "swagger-parser": "^3.4.1",
    "kafka-sse": "^0.4.0",
    "lodash": "^4.15.0",
    "node-rdkafka": "2.3.4",
    "node-rdkafka-statsd": "^0.1.0"
  },
  "devDependencies": {
    "ajv": "^6.5.4",
    "eslint-config-wikimedia": "^0.10.0",
    "eslint-plugin-jsdoc": "^4.0.1",
    "eslint-plugin-json": "^1.2.1",
    "extend": "^3.0.2",
    "mocha": "^5.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "mocha.parallel": "^0.15.6",
    "nyc": "^14.1.1",
    "openapi-schema-validator": "^3.0.3",
    "bunyan-prettystream": "^0.1.3"
  },
  "deploy": {
    "node": "6.11.1",
    "target": "debian",
    "env": {
      "BUILD_LIBRDKAFKA": "0"
    },
    "dependencies": {
      "debian": [
        {
          "repo_url": "https://apt.wikimedia.org/wikimedia",
          "release": "jessie-wikimedia",
          "pool": "main",
          "packages": [
            "librdkafka-dev"
          ]
        },
        "libsasl2-dev"
      ]
    }
  }
}
